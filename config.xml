<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>IoT Scanner</name>
    <description>
        Sphere IoT Device Scanner and Register
    </description>
    <author email="ob14767@my.bris.ac.uk">
        Oskar Bunyan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <engine name="ios" spec="~4.1.1" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
</widget>
